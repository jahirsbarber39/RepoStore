<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- External public storage (includes Downloads) -->
    <external-path
        name="external"
        path="." />
    
    <!-- Downloads folder specifically -->
    <external-path
        name="downloads"
        path="Download/" />
    
    <!-- Root external storage -->
    <root-path
        name="root"
        path="." />
    
    <!-- App external files -->
    <external-files-path
        name="external_files"
        path="." />
    
    <!-- App cache -->
    <cache-path
        name="cache"
        path="." />
    
    <!-- App internal files -->
    <files-path
        name="files"
        path="." />
</paths>
