<?xml version="1.0" encoding="utf-8"?>
<!-- Skeleton layout for app detail page with shimmer effect -->
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    app:shimmer_auto_start="true"
    app:shimmer_duration="1200"
    app:shimmer_base_alpha="0.7"
    app:shimmer_highlight_alpha="0.9">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- App Header skeleton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- App icon placeholder -->
                <View
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/skeleton_rounded" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- App name placeholder -->
                    <View
                        android:layout_width="180dp"
                        android:layout_height="22dp"
                        android:background="@drawable/skeleton_rounded_small" />

                    <!-- Developer name placeholder -->
                    <View
                        android:layout_width="120dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/skeleton_rounded_small" />

                </LinearLayout>
            </LinearLayout>

            <!-- Stats Row skeleton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="40dp"
                        android:layout_height="18dp"
                        android:background="@drawable/skeleton_rounded_small" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/skeleton_rounded_small" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/colorOutlineVariant" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="40dp"
                        android:layout_height="18dp"
                        android:background="@drawable/skeleton_rounded_small" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/skeleton_rounded_small" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/colorOutlineVariant" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="50dp"
                        android:layout_height="18dp"
                        android:background="@drawable/skeleton_rounded_small" />

                    <View
                        android:layout_width="45dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/skeleton_rounded_small" />
                </LinearLayout>

            </LinearLayout>

            <!-- Install Button skeleton -->
            <View
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/skeleton_rounded" />

            <!-- GitHub Button skeleton -->
            <View
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/skeleton_rounded" />

            <!-- Screenshots section skeleton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <View
                    android:layout_width="100dp"
                    android:layout_height="18dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/skeleton_rounded_small" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="12dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="120dp"
                            android:layout_height="200dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/skeleton_rounded" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="200dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/skeleton_rounded" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="200dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/skeleton_rounded" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?attr/colorOutlineVariant" />

            <!-- About section skeleton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <View
                    android:layout_width="120dp"
                    android:layout_height="18dp"
                    android:background="@drawable/skeleton_rounded_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/skeleton_rounded_small" />

                <View
                    android:layout_width="260dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/skeleton_rounded_small" />

                <View
                    android:layout_width="200dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/skeleton_rounded_small" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</com.facebook.shimmer.ShimmerFrameLayout>
