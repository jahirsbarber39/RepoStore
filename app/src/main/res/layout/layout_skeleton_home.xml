<?xml version="1.0" encoding="utf-8"?>
<!-- Full skeleton layout for home screen with shimmer effect -->
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:visibility="gone"
    app:shimmer_auto_start="true"
    app:shimmer_duration="1200"
    app:shimmer_base_alpha="0.7"
    app:shimmer_highlight_alpha="0.9">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Featured Section Skeleton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Section header skeleton -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <View
                        android:layout_width="150dp"
                        android:layout_height="18dp"
                        android:background="@drawable/skeleton_rounded_small" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="14dp"
                        android:background="@drawable/skeleton_rounded_small" />
                </LinearLayout>

                <!-- Featured carousel skeleton -->
                <include
                    layout="@layout/skeleton_featured_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Trending Section Skeleton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <!-- Section header skeleton -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <View
                        android:layout_width="120dp"
                        android:layout_height="18dp"
                        android:background="@drawable/skeleton_rounded_small" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="14dp"
                        android:background="@drawable/skeleton_rounded_small" />
                </LinearLayout>

                <!-- Horizontal app list skeleton -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="12dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include layout="@layout/skeleton_app_item" />
                        <include layout="@layout/skeleton_app_item" />
                        <include layout="@layout/skeleton_app_item" />
                        <include layout="@layout/skeleton_app_item" />
                        <include layout="@layout/skeleton_app_item" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Recently Updated Section Skeleton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <!-- Section header skeleton -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <View
                        android:layout_width="140dp"
                        android:layout_height="18dp"
                        android:background="@drawable/skeleton_rounded_small" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="14dp"
                        android:background="@drawable/skeleton_rounded_small" />
                </LinearLayout>

                <!-- Horizontal app list skeleton -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="12dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include layout="@layout/skeleton_app_item" />
                        <include layout="@layout/skeleton_app_item" />
                        <include layout="@layout/skeleton_app_item" />
                        <include layout="@layout/skeleton_app_item" />
                        <include layout="@layout/skeleton_app_item" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</com.facebook.shimmer.ShimmerFrameLayout>
